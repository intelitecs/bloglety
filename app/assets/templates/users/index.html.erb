
<form class="row push-2">
  <div class="large-10 columns push-1">
    <input type="text" size="70" ng-model="user_search_term" />
  </div>
  <div class="large-2 columns pull-4">
    <i class="icon-search search"></i>
  </div>
</form>





<div class="row">

  <div class="large-16 columns">
      <h1>Table des utilisateurs</h1>

      <div class="row user_management">
        <div class="large-10 columns">
          <i data-tooltip title="Créer un nouveau compte"    ng-click="displaySignUpForm()"  class="tip-top article-create icon-save icon-large"></i>
            <span  ng-show="getDone().length != 0">
              <i data-tooltip title="Modifier les comptes sélectionnés"   class="tip-top article-update icon-edit icon-large"></i>
              <i data-tooltip title="supprimer les comptes sélectionnés" ng-click="deleteSelectedUsers()"  class="tip-top article-delete icon-trash icon-large"></i>
            </span>
        </div>
      </div>
      <hr class="separator" />
      <div class="row">
        <div class="large-12 columns">
          <div ng-show="getDone().length != 0">
            <span><b>{{getDone().length}}</b> comptes sélectionnés</span>
          </div>
          <p><h4>{{users.length}} utilisateurs enregistrés.</h4></p>
        </div>
      </div>
      <div class="table row">

          <table ng-show="users.length != 0" class="large-5 columns responsible">
            <thead>
            <tr>
              <th class="selection">Selection</th>
              <th>Pseudo</th>
            </tr>
            </thead>
            <tbody>
            <tr class="user_tr" ng-repeat="user in users" ng-click="show_user(user)">
              <td id="selection" ><input type="checkbox" ng-model="user.done" />   {{$index+1}}  {{user.id}}</td>
              <td>{{user.username}} </td>
            </tr>
            </tbody>
        </table>

        <div class="large-5 columns pull-6 user_infos" ng-show="table_row_user">
          <h4 class="title">{{table_row_user.username}}   {{table_row_user.email}}</h4>
          <h5 class="published_date"><b class="date">{{table_row_user.created_at | date: 'fullDate'}}</b> | <i class="number">n° {{table_row_user.id}}</i></h5>
          <p><h6 class="description">{{table_row_user.comments.length}} commentaires</h6></p>
          <hr class="article_info_separator" />

        </div>
      </div>
  </div>
</div>









